  "devDependencies": {
    "preact": "^10.5.13",
    "prettier": "^2.0.5",
    "react": "^17.0.2",
    "vue": "^3.0.11"
  },
  "volta": {
    "node": "12.22.1",
    "yarn": "1.22.10",
    "npm": "7.11.1"
  }
}
